# Database Configuration (PostgreSQL)
DB_HOST=acdev.host
DB_PORT=5432
DB_NAME=messagestore
DB_USER=msgprocess
DB_PASSWORD=your_password_here
DB_SCHEMA=message_processor

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Flask Configuration
FLASK_APP=webapp.py
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=5000
WORKERS=4
LOG_LEVEL=INFO

# Analysis Settings
ENABLE_GROOMING_DETECTION=true
ENABLE_MANIPULATION_DETECTION=true
ENABLE_DECEPTION_ANALYSIS=true
MAX_UPLOAD_SIZE_MB=100

# Performance
ENABLE_REDIS_CACHE=true
CACHE_TTL_HOURS=24
CONNECTION_POOL_SIZE=10